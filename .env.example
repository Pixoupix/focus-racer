# ===========================================
# Focus Racer — Environment Variables
# Copy this file to .env and fill in the values
# ===========================================

# ---- Database ----
DATABASE_URL="postgresql://postgres:focusracer@postgres:5432/focusracer?schema=public"

# ---- NextAuth ----
NEXTAUTH_SECRET="CHANGE_ME_TO_A_RANDOM_SECRET"
NEXTAUTH_URL="https://yourdomain.com"

# ---- Upload ----
UPLOAD_DIR="./public/uploads"

# ---- Stripe ----
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
PLATFORM_FEE_PERCENT="10"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."

# ---- Email (Resend) ----
RESEND_API_KEY="re_..."
EMAIL_FROM="Focus Racer <noreply@yourdomain.com>"

# ---- AWS (required for production AI pipeline) ----
AWS_REGION="eu-west-1"
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REKOGNITION_COLLECTION_ID="focusracer-faces"

# ---- AWS S3 (optional — falls back to local storage) ----
AWS_S3_BUCKET=""
AWS_CLOUDFRONT_URL=""

# ---- AI Processing ----
AI_OCR_CONFIDENCE_THRESHOLD="70"
AI_QUALITY_THRESHOLD="30"
AI_AUTO_EDIT_ENABLED="true"
AI_FACE_INDEX_ENABLED="true"
AI_LABEL_DETECTION_ENABLED="true"
AI_MAX_CONCURRENT="8"
